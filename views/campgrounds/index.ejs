<% layout('layouts/boilerplate') %>
    
<div id="map" style="width: 100%;height: 500px;"></div>
<h1>All Campgrounds</h1>
<% for(let campground of campgrounds){%>
    <div class="card my-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length){ %>
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="Camp Image">
                <% }else{ %>
                    <img class="img-fluid" src="https://penmadsidrap.com/uploads/blog_image/default.jpg" alt="Camp Image">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title"><%= campground.title %></h4>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
                    <p class="card-text"><%= campground.description %></p>
                    <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">view more</a>
                </div>
            </div>
        </div>
    </div>
<% }%>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascript/clusterMap.js"></script>
